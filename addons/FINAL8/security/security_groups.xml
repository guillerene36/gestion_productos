<odoo>
    <data noupdate="1">
        <record id="module_category_gestion" model="ir.module.category">
            <field name="name">Gestión de Productos</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_gestion_user" model="res.groups">
            <field name="name">Usuario: Gestión de Productos</field>
            <field name="category_id" ref="module_category_gestion"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_gestion_admin" model="res.groups">
            <field name="name">Administrador: Gestión Total</field>
            <field name="category_id" ref="module_category_gestion"/>
            <field name="implied_ids" eval="[(4, ref('group_gestion_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="rule_productos_admin_todo" model="ir.rule">
            <field name="name">Productos: Admin ve todo</field>
            <field name="model_id" ref="model_gestion_productos"/>
            <field name="groups" eval="[(4, ref('group_gestion_admin'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
    </data>
</odoo>
