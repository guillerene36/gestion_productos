<odoo>
    <record id="view_partes_tree" model="ir.ui.view">
        <field name="name">gestion.partes.tree</field>
        <field name="model">gestion.partes</field>
        <field name="arch" type="xml">
            <list string="Lista de Partes">
                <field name="name"/>
                <field name="producto_id"/>
            </list>
        </field>
    </record>

    <record id="view_partes_kanban" model="ir.ui.view">
        <field name="name">gestion.partes.kanban</field>
        <field name="model">gestion.partes</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <field name="imagen" widget="image"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong><field name="name"/></strong>
                                <div class="text-muted">
                                    Producto: <field name="producto_id"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_partes_form" model="ir.ui.view">
        <field name="name">gestion.partes.form</field>
        <field name="model">gestion.partes</field>
        <field name="arch" type="xml">
            <form string="Formulario de Parte">
                <sheet>
                    <field name="imagen" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre de la Parte"/>
                        </h1>
                    </div>
                    <group>
                        <field name="producto_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_partes" model="ir.actions.act_window">
        <field name="name">Partes</field>
        <field name="res_model">gestion.partes</field>
        <field name="view_mode">list,kanban,form</field>
    </record>
</odoo>
