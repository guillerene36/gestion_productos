<odoo>
    <record id="view_gestion_productos_tree" model="ir.ui.view">
        <field name="name">gestion.productos.tree</field>
        <field name="model">gestion.productos</field>
        <field name="arch" type="xml">
            <list string="Productos">
                <field name="name"/>
                <field name="codigo"/>
                <field name="tipo"/>
                <field name="cantidad_vendida"/>
                <field name="unidad_negocio_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <record id="view_productos_kanban" model="ir.ui.view">
        <field name="name">gestion.productos.kanban</field>
        <field name="model">gestion.productos</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <field name="imagen" widget="image"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong><field name="name"/></strong><br/>
                                <span>Cod: <field name="codigo"/></span><br/>
                                <span>Origen: <field name="origen"/></span>
                                <div>
                                    <field name="unidad_negocio_ids" widget="many2many_tags"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_gestion_productos_form" model="ir.ui.view">
        <field name="name">gestion.productos.form</field>
        <field name="model">gestion.productos</field>
        <field name="arch" type="xml">
            <form string="Producto">
                <sheet>
                    <field name="imagen" widget="image" class="oe_avatar"/>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre del Producto"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="codigo"/>
                            <field name="tipo"/>
                        </group>
                        <group>
                            <field name="origen"/>
                            <field name="cantidad_vendida"/>
                            <field name="unidad_negocio_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="DescripciÃ³n">
                            <field name="descripcion"/>
                        </page>
                        <page string="Partes">
                            <field name="partes_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="imagen" widget="image" options="{'size': [25, 25]}"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_productos" model="ir.actions.act_window">
        <field name="name">Productos</field>
        <field name="res_model">gestion.productos</field>
        <field name="view_mode">list,kanban,form</field>
    </record>
</odoo>
